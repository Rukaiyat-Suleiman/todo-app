<% layout('layouts/main') -%>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>My Tasks</h1>
  <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addTaskModal">Add Task</button>
</div>

<ul class="nav nav-tabs mb-4">
  <li class="nav-item">
    <a class="nav-link <%= currentStatus === 'all' ? 'active' : '' %>" href="/">All</a>
  </li>
  <li class="nav-item">
    <a class="nav-link <%= currentStatus === 'pending' ? 'active' : '' %>" href="/?status=pending">
      Pending (<%= pendingCount %>)
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link <%= currentStatus === 'completed' ? 'active' : '' %>" href="/?status=completed">
      Completed (<%= completedCount %>)
    </a>
  </li>
</ul>

<% if (tasks.length === 0) { %>
  <div class="text-center py-5">
    <p class="text-muted">No tasks found. Add your first task!</p>
  </div>
<% } else { %>
  <div class="row">
    <% tasks.forEach(task => { %>
      <div class="col-md-6 col-lg-4 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              <%= task.title %>
              <span class="badge bg-<%= task.status === 'completed' ? 'success' : task.status === 'pending' ? 'warning' : 'secondary' %> float-end">
                <%= task.status %>
              </span>
            </h5>
            <div class="mt-3">
              <% if (task.status !== 'completed') { %>
                <form method="POST" action="/<%= task._id %>/status" class="d-inline">
                  <input type="hidden" name="status" value="completed">
                  <button type="submit" class="btn btn-sm btn-success">Complete</button>
                </form>
              <% } else { %>
                <form method="POST" action="/<%= task._id %>/status" class="d-inline">
                  <input type="hidden" name="status" value="pending">
                  <button type="submit" class="btn btn-sm btn-warning">Undo</button>
                </form>
              <% } %>
              <form method="POST" action="/<%= task._id %>/status" class="d-inline">
                <input type="hidden" name="status" value="deleted">
                <button type="submit" class="btn btn-sm btn-danger" 
                  onclick="return confirm('Delete this task?')">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>

<!-- Add Task Modal -->
<div class="modal fade" id="addTaskModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add New Task</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form method="POST" action="/">
        <div class="modal-body">
          <input type="text" name="title" class="form-control" placeholder="Task title..." required>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Add Task</button>
        </div>
      </form>
    </div>
  </div>
</div>
